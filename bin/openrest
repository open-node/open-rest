#! /usr/bin/env coffee

params    = require 'commander'
_         = require 'underscore'
init      = require './src/init'
pkg       = require '../package'

params
  .version(pkg.version)
  .option('init',       '初始化一个新的应用')
  .parse(process.argv)

# 初始化一个应用
if params.init
  return init(process.argv[3] or './', process.argv[4] or 'coffee')
